<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<!-- Profile Name -->
		<PublishProfile>NewBCManagementAPI</PublishProfile>

		<!-- Publishing method: Web Deploy -->
		<PublishMethod>MSDeploy</PublishMethod>

		<!-- The server to deploy to -->
		<MSDeployServiceURL>192.168.100.21</MSDeployServiceURL>

		<!-- IIS Site Name (as configured in IIS) -->
		<SiteUrlToLaunchAfterPublish>http://dc-val-dla-01:5000/swagger/index.html</SiteUrlToLaunchAfterPublish>
		<MSDeploySite>NewBCManagementAPI</MSDeploySite>

		<!-- Deployment credentials (Windows user with permissions) -->
		<UserName>ADMINISTRATOR</UserName>
		<Password>Val@192345</Password>

		<!-- Deployment settings -->
		<DeployIisAppPath>NewBCManagementAPI</DeployIisAppPath>
		<AllowUntrustedCertificate>true</AllowUntrustedCertificate>

		<!-- Files to exclude from deployment -->
		<ExcludeApp_Data>true</ExcludeApp_Data>

		<!-- Build Configuration -->
		<Configuration>Release</Configuration>

		<!-- Target Framework -->
		<TargetFramework>net8.0</TargetFramework>
		<!-- Adjust if needed -->

		<!-- Web Deploy Additional Settings -->
		<EnableMSDeployBackup>true</EnableMSDeployBackup>
		<SkipExtraFilesOnServer>true</SkipExtraFilesOnServer>
	</PropertyGroup>
</Project>
